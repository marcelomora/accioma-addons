<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="model">res.config.settings</field>
    <field name="name">res.config.settings.rappi</field>
    <field name="inherit_id" ref="sale.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <!-- <xpath expr="//div[hasclass('app_settings_block')]" position="inside"> -->
      <xpath expr="//div[@id='sale_ebay']" position="inside">
          <h2>Rappi</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-16 o_setting_box">
              <div class="o_setting_left_pane"/>
              <div class="o_setting_right_pane">
                <span class="o_form_label">Rappi Pricelist</span>
                <field name="rappi_pricelist_id"/>
              </div>
            </div>
          </div>
      </xpath>
    </field>
</record>

</odoo>
